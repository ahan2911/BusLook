<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityClasses.MainActivity">

        <ImageView
            android:src="@mipmap/bl_logo"
            android:layout_width="205dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:text="BusLook"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:fontFamily="@font/alex_brush" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/mainback"
            android:id="@+id/busButton">
            <ImageView
                android:layout_width="135dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:src="@drawable/busstarting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Bus Driver"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:fontFamily="@font/aref_ruqaa" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mainback"
            android:id="@+id/userButton">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="2dp"
                android:background="@color/transparent"
                android:src="@drawable/userstarting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="User"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:fontFamily="@font/aref_ruqaa" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver: 1.0.0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:textColor="@color/white" />
</LinearLayout>